<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".NewAccount"
    tools:showIn="@layout/activity_new_account">

    <EditText
        android:id="@+id/newacc_username"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/enter_Newusername"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/newacc_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newacc_name"
        android:autofillHints="" />

    <EditText
        android:id="@+id/newacc_password"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="22dp"
        android:ems="10"
        android:hint="@string/enter_password_here"
        android:inputType="textPersonName"
        android:password="false"
        android:text="enter password here"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/newacc_confirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newacc_username"
        android:autofillHints="" />

    <EditText
        android:id="@+id/newacc_confirmPassword"
        android:layout_width="241dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="confirm password"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/NewaccSubmitBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newacc_password"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/newacc_age"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="563dp"
        android:ems="10"
        android:inputType="number"
        android:text="@string/age"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newacc_name"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <EditText
        android:id="@+id/newacc_name"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="27dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/enter_your_name"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/newacc_username"
        app:layout_constraintEnd_toStartOf="@+id/newacc_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <Button
        android:id="@+id/NewaccSubmitBtn"
        android:layout_width="140dp"
        android:layout_height="51dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="215dp"
        android:text="@string/submit"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newacc_confirmPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>